menu "Record Manager Configuration"
choice
	prompt "Record Format"
	config MP4
		bool "MP4"
	config TS
		bool "TS"
endchoice
config SUPPORT_ASYNC_STOP
		bool "Support Async Stop"
		help
			whether the recording supports the asynchronous stop mode.
endmenu
