#comment "Device Configuration"

menuconfig GSENSOR
	bool "GSENSOR support"

if GSENSOR
	choice
		prompt "GSENSOR Type"
		config GSENSOR_MC3416
			bool "MC3416"
			depends on !HI3559AV100
		config GSENSOR_SC7A20
			bool "SC7A20"
			depends on HI3518EV300 && REFB_DASHCAM
	endchoice
endif

